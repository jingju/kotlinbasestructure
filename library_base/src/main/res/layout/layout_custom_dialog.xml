<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="17dp">

    <TextView
        android:id="@+id/custom_dialog_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="13dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        android:text="标题"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/custom_dialog_message_view"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="内容"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <View
        android:id="@+id/custom_dialog_divider"
        android:layout_width="250dp"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_dialog_cancel_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/custom_dialog_btn_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/custom_dialog_confirm_btn"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
